<h1>Remaking Your BBT...</h1>

<h4>Pick your bubbles!</h4>

<%=form_for @cup do |f|%>
        <p><%=f.label 'Tea'%>
        <%=f.collection_select :tea_id, Tea.all, :id, :name%></p>

        <%=f.label 'Straw Color'%>
        <%=f.collection_select :straw_id, Straw.all, :id, :color%>

<p><%=f.label :name%>
<%=f.text_field :name%></p>


<%=f.submit 'Edit Boba'%>


<%end%>

