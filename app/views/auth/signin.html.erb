<body>

<div align=center>
<p><h1>LOGIN</h1></p>

<%= flash[:error_message] %>
<div class="form-group">
<%= form_for :login do |f|%>
    
    <p><%= f.label :username%>
    <%= f.text_field :username, :placeholder => "enter username", :id => "ip2"%></p>
    
    <p><%= f.label :password%>
    <%= f.password_field :password, :placeholder => "enter password", :id => "ip2"%></p>
    <input class="btn btn-outline-secondary" type="submit" value="LOG IN"><br>
</div>
    <p>New user? <%= link_to 'Sign Up Here', signup_path, class: 'link-to-text-color' %></p>
    
    <%end%>
</div>


